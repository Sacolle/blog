---
import IndexSideBar from '../components/IndexSideBar.astro';
import type { MarkdownHeading } from 'astro';

interface Props {
	headings: MarkdownHeading[]
}

const { headings } = Astro.props;
---
<main>
	<article>
		<slot/>
	</article>
	<IndexSideBar headings={headings}/>
</main>

<style>
	main {
		display: grid;
		grid-template-columns: 80% 20%;
		margin: auto;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--font-color);
		font-size: 20px;
		line-height: 1.6;
	}
	article {
		min-width: 50vw;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>