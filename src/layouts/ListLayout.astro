---

interface Props {
	title: string
}

const { title } = Astro.props

---
<main>
	<h1>{title}</h1>
	<ul>
		<slot/>
	</ul>
</main>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--black);
		font-size: 20px;
		line-height: 1.6;
		height: 100vh;
		display: flex;
		flex-direction: column;
	}
</style>