---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const base = import.meta.env.BASE_URL
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Blog de Pedro Colle. Para bloguear as coisas de programador e tambÃ©m de ser humano" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href=`${base}/smallhumm.jpeg` />
		<meta name="generator" content={Astro.generator} />
		<!-- style para o rehypeKatex -->
		<link rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
			integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
			crossorigin="anonymous"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		--main-color: #d33847;
		--secondary-color: #f79824;
		--hover-color: rgba(247, 152, 36, 0.5);
		--complementary-color: #388697;
		--background-color: #fefbfb; /* equivalente a cor acima, mas em hsl com 97~98% de luminosidade*/
		--font-color: #1e1b1b;
		--gray: #c1c1c1;
		--black: #1e1b1b;
		--other-black: #333333;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background-color);
	}
	body {
		margin:0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

</style>
