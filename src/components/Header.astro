---
interface Props {
}

const { } = Astro.props;

const base = import.meta.env.BASE_URL
---
<header>
	<nav>
		<a class="website-title" href=`${base}/`>Colle's Blog</a>
		<a class="subpage" title="Home" href=`${base}/`>Home</a>
		<a class="subpage" title="Posts" href=`${base}/posts`>Posts</a>
		<a class="subpage" title="Sobre" href=`${base}/about`>Sobre</a>
		<span>
			<a href="https://github.com/Sacolle"><img src=`${base}/github.svg` alt="github"></a>
			<!-- Sim, isso eh um rick roll, sabe, pro site ser retro -->
			<a href="https://youtu.be/dQw4w9WgXcQ?si=HEWy7g-OLiIFvJaG"><img src=`${base}/youtube.svg` alt="youtube"></a>
		</span>
	</nav>
</header>
<style>
	header {
		background-color: var(--background-color);
		position: fixed;
		z-index: 1;
		width: 100%;
		border-style: solid;
		border-width: 2px;
		border-top: none;
		border-left: none;
		border-right: none;
		border-color: var(--main-color);
	}
	nav {
		display: flex;
		flex-direction: row;
	}
	.website-title {
		padding-right: 1vw;
		padding-left: 1vw;
		margin-right: 3vw;
		text-decoration: none;
	}
	.subpage {
		padding-left: 1vw;
		padding-right: 1vw;
	}
	nav > span {
		display: flex;
		gap: 1vw;
		margin-left: auto;
		margin-right: 3vw;
	}
	.subpage {
		color: var(--font-color);
		text-decoration: none;
		background-color: var(--main-color);
		position: relative; 
	}
	.subpage::after {
		content: attr(title);
		color: var(--font-color);
		text-align: center;
		position: absolute;
		/* centered */
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) scale(1.01); /* Center it and set initial scale */
		z-index: 1; /* Make sure it stays behind the text */

		width: 100%; /* Adjust size as needed */
		height: 100%; /* Adjust size as needed */

		background: var(--background-color); /* Outline effect color */
		transition: transform 0.3s ease; /* Smooth transition */
	}

	.website-title{
		color: var(--text-color)
	}

	.subpage:hover::after {
		box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
		transform: translate(-45%, -35%) scale(1.0); /* Scale effect on hover */
	}
</style>